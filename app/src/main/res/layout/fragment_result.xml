<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#80000000"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      app:cardCornerRadius="12dp"
      app:cardElevation="8dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Race Results"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        </LinearLayout>

        <!-- Podium Display -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:gravity="center"
          android:orientation="horizontal">

          <!-- 1st Place -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/podium_second_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
              android:id="@+id/ivFirst"
              android:layout_width="32dp"
              android:layout_height="32dp"
              android:layout_marginBottom="4dp"
              android:contentDescription="First place horse"
              android:src="@drawable/black_horse_tile00" />

            <TextView
              android:id="@+id/tvFirstName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Horse 1: Thunder"
              android:textColor="@android:color/white"
              android:textSize="10sp"
              android:textStyle="bold"
              android:textAlignment="center" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1st"
              android:textColor="@android:color/white"
              android:textSize="13sp"
              android:textStyle="bold" />

          </LinearLayout>

          <!-- 2nd Place -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/podium_second_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
              android:id="@+id/ivSecond"
              android:layout_width="32dp"
              android:layout_height="32dp"
              android:layout_marginBottom="4dp"
              android:contentDescription="Second place horse"
              android:src="@drawable/yellow_horse_tile00" />

            <TextView
              android:id="@+id/tvSecondName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Horse 2: Lightning"
              android:textColor="@android:color/white"
              android:textSize="10sp"
              android:textStyle="bold"
              android:textAlignment="center" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2nd"
              android:textColor="@android:color/white"
              android:textSize="13sp"
              android:textStyle="bold" />

          </LinearLayout>

          <!-- 3rd Place -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/podium_second_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
              android:id="@+id/ivThird"
              android:layout_width="32dp"
              android:layout_height="32dp"
              android:layout_marginBottom="4dp"
              android:contentDescription="Third place horse"
              android:src="@drawable/brown_horse_tile00" />

            <TextView
              android:id="@+id/tvThirdName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Horse 3: Storm"
              android:textColor="@android:color/white"
              android:textSize="10sp"
              android:textStyle="bold"
              android:textAlignment="center" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="3rd"
              android:textColor="@android:color/white"
              android:textSize="13sp"
              android:textStyle="bold" />

          </LinearLayout>

          <!-- 4th Place -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/podium_second_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
              android:id="@+id/ivFourth"
              android:layout_width="32dp"
              android:layout_height="32dp"
              android:layout_marginBottom="4dp"
              android:contentDescription="Fourth place horse"
              android:src="@drawable/white_horse_tile00" />

            <TextView
              android:id="@+id/tvFourthName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Horse 4: Blaze"
              android:textColor="@android:color/white"
              android:textSize="10sp"
              android:textStyle="bold"
              android:textAlignment="center" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="4th"
              android:textColor="@android:color/white"
              android:textSize="13sp"
              android:textStyle="bold" />

          </LinearLayout>

        </LinearLayout>

        <!-- Payout Summary -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:orientation="vertical">

          <TextView
            android:id="@+id/tvTotalWinnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Total Winnings: +30 Coins"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />

          <!-- Net Change Bar -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/progress_background"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/tvNetChange"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/progress_fill"
              android:gravity="center"
              android:text="Net: +75%"
              android:textColor="@android:color/white"
              android:textSize="13sp"
              android:textStyle="bold" />

          </LinearLayout>

          <TextView
            android:id="@+id/tvNewBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Balance: 120 Coins"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        </LinearLayout>

        <!-- Payout Multipliers (Compact) -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="Payout Multipliers"
          android:textColor="#666666"
          android:textSize="13sp"
          android:textStyle="bold" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:orientation="horizontal">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1st: x2.0"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2nd: x1.3"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3rd: x0.5"
            android:textColor="#B71C1C"
            android:textSize="12sp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4th: x0"
            android:textColor="#F44336"
            android:textSize="12sp"
            android:textStyle="bold" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <Button
            android:id="@+id/btnRaceAgain"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#1976D2"
            android:drawableStart="@drawable/ic_refresh"
            android:drawablePadding="6dp"
            android:text="Race Again"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

          <Button
            android:id="@+id/btnMainMenu"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:drawableStart="@drawable/ic_home"
            android:drawablePadding="6dp"
            android:text="Main Menu"
            android:textColor="#1976D2"
            android:textSize="13sp"
            android:textStyle="bold" />

        </LinearLayout>

        <!-- Settings Button -->
        <Button
          android:id="@+id/btnSettings"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="8dp"
          android:backgroundTint="#757575"
          android:text="Settings"
          android:textColor="@android:color/white"
          android:textSize="13sp" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>

</androidx.core.widget.NestedScrollView>
